<Window x:Class="Alpha.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Alpha"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="215,305,0,0" VerticalAlignment="Top" Width="75" Click="ConnectKinnectButton"/>
        <Button Content="Disconnect" HorizontalAlignment="Left" Margin="500,305,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Slider HorizontalAlignment="Left" Margin="325,230,0,0" VerticalAlignment="Top" Width="150" Minimum="-27" Maximum="27" ValueChanged="Slider_ValueChanged"/>
        <Button Content="Apply" HorizontalAlignment="Left" Margin="365,290,0,0" VerticalAlignment="Top" Width="75"/>
        <Canvas DataContext="{Binding km.rightHandPos}" x:Name="background" HorizontalAlignment="Left" Height="205" Margin="280,20,0,0" VerticalAlignment="Top" Width="205">
            <Ellipse Canvas.Left="{Binding xpos}" Canvas.Top="{Binding ypos}" x:Name="crosshair" Fill="Red" HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="100"/>
        </Canvas>
    </Grid>
</Window>
